<!doctype html>
<html>
<head>
  <meta http-equiv="content-type" content="text/html; charset=UTF-8">
  <title>Admin</title>
  <link href="/default.css" media="screen" rel="stylesheet"
        type="text/css">
  <link href="/admin.css" media="screen" rel="stylesheet"
        type="text/css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
  <%= yield_content :head %>
</head>
<body>
  <div id="header">
    <h1>Admin Page</h1>
  </div>
  <div id="message">
    <% if flash[:warning] %>
      <p class="warning"><%= flash[:warning] %></p>
    <% elsif flash[:notice] %>
      <p class="notice"><%= flash[:notice] %></p>
    <% end %>
  </div>
  <div id="body">
    <%= partial :_menu %>
    <hr />
    <%= yield %>
  </div>
  <div id="footer">
    <p>admin</p>
  </div>
</div>
